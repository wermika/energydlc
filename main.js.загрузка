// remove loading container on site fully loaded.
window.addEventListener('load', function () {
    $("#loading_container").animate({
        opacity: "hide"
    }, 1500);
})

// scroll settings
SmoothScroll({
    animationTime    : 1000,
    stepSize         : 75,
    accelerationDelta : 35,  
    accelerationMax   : 2,   
    keyboardSupport   : true,  
    arrowScroll       : 30,
    pulseAlgorithm   : true,
    pulseScale       : 4,
    pulseNormalize   : 1,
    touchpadSupport   : true,
})
